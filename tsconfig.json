{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "incremental": true,
    "declaration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "baseUrl": "./",
    "outDir": "dist"
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "src/*.test.ts",
    "src/examples/**.ts"
  ]
}